---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

const formatDate = (d: Date) =>
  d.toLocaleDateString('en-GB', { year: 'numeric', month: 'long', day: 'numeric' });
---

<BaseLayout
  title="Writing"
  description="Posts and thoughts on data, analytics, and technology by Alicia Alcaide."
>
  <div class="blog-wrapper container--narrow">
    <header class="blog-header">
      <h1 class="blog-title">Writing</h1>
      <p class="blog-subtitle">
        Thoughts on data, analytics, AI, and the messy reality of working with information at scale.
      </p>
    </header>

    {allPosts.length === 0 ? (
      <p class="empty-state">No posts yet â€” check back soon.</p>
    ) : (
      <ul class="post-list" role="list">
        {allPosts.map(post => (
          <li>
            <a href={`/blog/${post.slug}`} class="post-row">
              <div class="post-row-meta">
                <time datetime={post.data.pubDate.toISOString()}>
                  {formatDate(post.data.pubDate)}
                </time>
                {post.data.tags?.length > 0 && (
                  <ul class="tag-row" role="list">
                    {post.data.tags.map(tag => (
                      <li><span class="tag">{tag}</span></li>
                    ))}
                  </ul>
                )}
              </div>
              <h2 class="post-row-title">{post.data.title}</h2>
              <p class="post-row-desc">{post.data.description}</p>
            </a>
          </li>
        ))}
      </ul>
    )}
  </div>
</BaseLayout>

<style>
  .blog-wrapper {
    padding: 4rem 0 6rem;
  }

  .blog-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .blog-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    letter-spacing: -0.03em;
    margin-bottom: 0.75rem;
  }

  .blog-subtitle {
    font-size: 1.0625rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    max-width: 520px;
  }

  .post-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .post-row {
    display: block;
    padding: 1.75rem 0;
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text);
    transition: padding-left 0.15s;
  }

  .post-row:last-child {
    border-bottom: none;
  }

  .post-row:hover {
    padding-left: 0.5rem;
    color: var(--color-text);
  }

  .post-row-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }

  .tag-row {
    display: flex;
    gap: 0.35rem;
  }

  .tag {
    display: inline-block;
    background: var(--color-tag-bg);
    color: var(--color-tag-text);
    border: 1px solid var(--color-tag-border);
    padding: 0.1rem 0.5rem;
    border-radius: var(--radius-full);
    font-size: 0.72rem;
    font-weight: 500;
  }

  .post-row-title {
    font-size: 1.15rem;
    font-weight: 600;
    line-height: 1.35;
    margin-bottom: 0.5rem;
    transition: color 0.15s;
  }

  .post-row:hover .post-row-title {
    color: var(--color-accent);
  }

  .post-row-desc {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    line-height: 1.65;
  }

  .empty-state {
    color: var(--color-text-muted);
    font-size: 1rem;
    padding: 2rem 0;
  }
</style>
