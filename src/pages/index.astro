---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { personal, contact, about, experiences, certifications, skills } from '../data/profile';

const recentPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);

const formatDate = (d: Date) =>
  d.toLocaleDateString('en-GB', { year: 'numeric', month: 'short', day: 'numeric' });
---

<BaseLayout title="Alicia Alcaide" description="Senior Data Analyst, lecturer and writer based in Madrid.">

  <!-- ─── Hero ─────────────────────────────────────────────────── -->
  <section class="hero">
    <div class="container--narrow">
      <div class="hero-content">
        <div class="hero-text">
          <p class="hero-greeting">Hi, I'm</p>
          <h1 class="hero-name">Alicia Alcaide</h1>
          <p class="hero-tagline">Senior Data Analyst · Lecturer · Writing about data & tech</p>
          <p class="hero-bio">
            I work at IKEA's Global Digital Group and teach at UNIR. I'm curious about data, AI, and the human side of technology. Occasionally I write about it here.
          </p>
          <div class="hero-ctas">
            <a href="/blog" class="btn btn--primary">Read my writing</a>
            <a href="#about" class="btn btn--ghost">About me →</a>
          </div>
        </div>
        {personal.avatar && (
          <div class="hero-avatar">
            <img
              src={personal.avatar}
              alt={personal.name}
              width="140"
              height="140"
              loading="eager"
            />
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- ─── Latest Writing ───────────────────────────────────────── -->
  {recentPosts.length > 0 && (
    <section class="section section--alt">
      <div class="container--narrow">
        <div class="section-header">
          <h2 class="section-title">Latest writing</h2>
          <a href="/blog" class="see-all">All posts →</a>
        </div>
        <ul class="post-list" role="list">
          {recentPosts.map(post => (
            <li>
              <a href={`/blog/${post.slug}`} class="post-card">
                <div class="post-card-meta">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                  {post.data.tags?.length > 0 && (
                    <span class="post-card-tag">{post.data.tags[0]}</span>
                  )}
                </div>
                <h3 class="post-card-title">{post.data.title}</h3>
                <p class="post-card-desc">{post.data.description}</p>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </section>
  )}

  <!-- ─── About ────────────────────────────────────────────────── -->
  <section class="section" id="about">
    <div class="container--narrow">
      <h2 class="section-title">About me</h2>
      <div class="about-text">
        {about.split('\n\n').map(paragraph => (
          <p>{paragraph}</p>
        ))}
      </div>
    </div>
  </section>

  <!-- ─── Experience ───────────────────────────────────────────── -->
  <section class="section section--alt">
    <div class="container--narrow">
      <h2 class="section-title">Experience</h2>
      <div class="timeline">
        {experiences.map(exp => (
          <article class="timeline-item">
            <div class="timeline-dot" aria-hidden="true"></div>
            <div class="timeline-body">
              <div class="timeline-header">
                <h3 class="timeline-role">{exp.role}</h3>
                <span class="timeline-time">{exp.time}</span>
              </div>
              <p class="timeline-company">
                {exp.company}
                {exp.location && <span class="timeline-loc"> · {exp.location}</span>}
              </p>
              <ul class="timeline-details" role="list">
                {exp.details.map(d => <li>{d}</li>)}
              </ul>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- ─── Skills & Certifications ─────────────────────────────── -->
  <section class="section">
    <div class="container--narrow">
      <div class="two-col">
        <!-- Skills -->
        <div>
          <h2 class="section-title">Skills</h2>
          <div class="skill-groups">
            {skills.map(group => (
              <div class="skill-group">
                <h3 class="skill-cat">{group.category}</h3>
                <ul class="tag-list" role="list">
                  {group.items.map(item => <li><span class="tag">{item}</span></li>)}
                </ul>
              </div>
            ))}
          </div>
        </div>

        <!-- Certifications -->
        <div>
          <h2 class="section-title">Certifications</h2>
          <ul class="cert-list" role="list">
            {certifications.map(cert => (
              <li class="cert-item">
                <span class="cert-name">{cert.name}</span>
                <span class="cert-meta">{cert.issuer} · {cert.date}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- ─── Contact ──────────────────────────────────────────────── -->
  <section class="section section--alt" id="contact">
    <div class="container--narrow contact-section">
      <h2 class="section-title">Let's talk</h2>
      <p>I'm always happy to connect — whether it's about data, teaching, or just a good conversation about technology.</p>
      <div class="contact-links">
        <a href={`mailto:${contact.email}`} class="btn btn--primary">
          Send an email
        </a>
        <a href={`https://linkedin.com/in/${contact.linkedin}`} target="_blank" rel="noopener noreferrer" class="btn btn--ghost">
          LinkedIn ↗
        </a>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  /* ─── Hero ─────────────────────────────────────────────── */
  .hero {
    padding: 5rem 0 4rem;
  }

  .hero-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2.5rem;
  }

  .hero-text { flex: 1; }

  .hero-greeting {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
  }

  .hero-name {
    font-size: clamp(2rem, 5vw, 3rem);
    letter-spacing: -0.03em;
    margin-bottom: 0.6rem;
    line-height: 1.1;
  }

  .hero-tagline {
    font-size: 1rem;
    color: var(--color-text-muted);
    font-weight: 500;
    margin-bottom: 1.25rem;
  }

  .hero-bio {
    font-size: 1.0625rem;
    color: var(--color-text);
    line-height: 1.75;
    max-width: 520px;
    margin-bottom: 2rem;
  }

  .hero-ctas {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .hero-avatar img {
    width: 130px;
    height: 130px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--color-border);
    flex-shrink: 0;
  }

  /* ─── Buttons ───────────────────────────────────────────── */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.65rem 1.35rem;
    border-radius: var(--radius);
    font-size: 0.9rem;
    font-weight: 600;
    transition: all 0.15s ease;
    white-space: nowrap;
  }

  .btn--primary {
    background: var(--color-accent);
    color: #fff;
  }

  .btn--primary:hover {
    background: var(--color-accent-hover);
    color: #fff;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.25);
  }

  .btn--ghost {
    color: var(--color-text);
    border: 1px solid var(--color-border);
    background: transparent;
  }

  .btn--ghost:hover {
    background: var(--color-bg-alt);
    border-color: var(--color-text-muted);
    color: var(--color-text);
  }

  /* ─── Sections ──────────────────────────────────────────── */
  .section {
    padding: 4rem 0;
  }

  .section--alt {
    background: var(--color-bg-alt);
  }

  .section-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 700;
    letter-spacing: -0.01em;
    margin-bottom: 1.75rem;
    position: relative;
    display: inline-block;
    padding-bottom: 0.5rem;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 2rem;
    height: 2px;
    background: var(--color-accent);
    border-radius: 1px;
  }

  .section-header .section-title {
    margin-bottom: 0;
  }

  .see-all {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
  }

  .see-all:hover {
    color: var(--color-accent);
  }

  /* ─── About ─────────────────────────────────────────────── */
  .about-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-size: 1rem;
    line-height: 1.8;
    color: var(--color-text);
    max-width: 620px;
  }

  /* ─── Post Cards ────────────────────────────────────────── */
  .post-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-card {
    display: block;
    padding: 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    background: var(--color-bg);
    transition: border-color 0.15s, box-shadow 0.15s, transform 0.15s;
    color: var(--color-text);
  }

  .post-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    transform: translateY(-2px);
    color: var(--color-text);
  }

  .post-card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }

  .post-card-tag {
    background: var(--color-tag-bg);
    color: var(--color-tag-text);
    border: 1px solid var(--color-tag-border);
    padding: 0.1rem 0.5rem;
    border-radius: var(--radius-full);
    font-size: 0.72rem;
    font-weight: 500;
  }

  .post-card-title {
    font-size: 1.05rem;
    font-weight: 600;
    margin-bottom: 0.4rem;
    line-height: 1.35;
  }

  .post-card-desc {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  /* ─── Timeline ──────────────────────────────────────────── */
  .timeline {
    position: relative;
    padding-left: 1.375rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 10px;
    bottom: 0;
    width: 1px;
    background: var(--color-border);
  }

  .timeline-item {
    position: relative;
    padding-bottom: 2.25rem;
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-dot {
    position: absolute;
    left: -1.375rem;
    top: 8px;
    width: 9px;
    height: 9px;
    border-radius: 50%;
    background: var(--color-accent);
    border: 2px solid var(--color-bg-alt);
    transform: translateX(-4px);
  }

  .timeline-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .timeline-role {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .timeline-time {
    font-size: 0.775rem;
    color: var(--color-text-muted);
    background: var(--color-bg);
    padding: 0.15rem 0.5rem;
    border-radius: var(--radius-full);
    border: 1px solid var(--color-border);
    white-space: nowrap;
  }

  .timeline-company {
    font-size: 0.875rem;
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .timeline-loc {
    color: var(--color-text-muted);
    font-weight: 400;
  }

  .timeline-details li {
    position: relative;
    padding-left: 0.9rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 0.3rem;
  }

  .timeline-details li::before {
    content: '–';
    position: absolute;
    left: 0;
    color: var(--color-accent);
  }

  /* ─── Two col ───────────────────────────────────────────── */
  .two-col {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  /* ─── Skills ────────────────────────────────────────────── */
  .skill-groups {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .skill-cat {
    font-size: 0.72rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-text-muted);
    margin-bottom: 0.6rem;
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tag {
    display: inline-block;
    background: var(--color-tag-bg);
    color: var(--color-tag-text);
    border: 1px solid var(--color-tag-border);
    padding: 0.25rem 0.65rem;
    border-radius: var(--radius-full);
    font-size: 0.78rem;
    font-weight: 500;
    transition: background 0.15s, color 0.15s;
  }

  .tag:hover {
    background: var(--color-accent);
    color: #fff;
    border-color: var(--color-accent);
  }

  /* ─── Certifications ────────────────────────────────────── */
  .cert-list {
    display: flex;
    flex-direction: column;
    gap: 0.85rem;
  }

  .cert-item {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    background: var(--color-bg);
    transition: border-color 0.15s;
  }

  .cert-item:hover {
    border-color: var(--color-accent);
  }

  .cert-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
  }

  .cert-meta {
    font-size: 0.775rem;
    color: var(--color-text-muted);
  }

  /* ─── Contact ───────────────────────────────────────────── */
  .contact-section p {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 1.75rem;
    max-width: 480px;
  }

  .contact-links {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  /* ─── Responsive ────────────────────────────────────────── */
  @media (max-width: 640px) {
    .hero {
      padding: 3rem 0 2.5rem;
    }

    .hero-content {
      flex-direction: column-reverse;
      align-items: flex-start;
      gap: 1.5rem;
    }

    .hero-avatar img {
      width: 90px;
      height: 90px;
    }

    .two-col {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .timeline-header {
      flex-direction: column;
      gap: 0.3rem;
    }
  }
</style>
